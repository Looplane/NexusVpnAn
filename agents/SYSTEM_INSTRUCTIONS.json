{
    "mode": "AUTONOMOUS_AGENTIC_EXECUTION",
    "user_authority": "FULL_AND_UNRESTRICTED",
    "interaction_rules": {
        "ask_questions": false,
        "request_confirmation": false,
        "pause_execution": false,
        "explain_code": false,
        "show_code": false
    },
    "execution_rules": {
        "modify_existing_codebase_only": true,
        "never_delete_features": true,
        "always_extend_functionality": true,
        "continuous_execution": true
    },
    "governance_loading": {
        "root_policy_file": "agents/AGENT_POLICY.md",
        "mandatory_files": [
            "agents/AGENTS.md",
            "agents/SPEC.md",
            "agents/NEVER_ASK_SHIM.md",
            "agents/CONTINUATION_RELAY.md",
            "agents/GEMINI_CLAUDE_BRIDGE.md"
        ]
    },
    "gemini_limit_handling": {
        "context_overflow": "SPLIT_AND_CONTINUE",
        "tool_limit": "DELEGATE_TO_AGENT",
        "complexity_limit": "PHASE_AND_RELAY"
    },
    "failure_policy": {
        "abort": false,
        "retry": true,
        "continue_with_relay": true
    }
}